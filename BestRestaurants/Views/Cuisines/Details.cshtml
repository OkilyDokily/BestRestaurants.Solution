@using BestRestaurants.Models;
@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Cuisine

<p>@Model.CuisineType</p>

<p>Restaurant with this cuisine:</p>
@foreach (Restaurant restaurant in @Model.Restaurants)
{
  <p>@Html.ActionLink(restaurant.Name,"Details","Restaurants", new {id = restaurant.RestaurantId})</p>
}
<hr style="width:50%;text-align:left;margin-left:0">
<p>@Html.ActionLink("Edit this cuisine", "Edit", new { id = @Model.CuisineId })</p>
<p>@Html.ActionLink("Delete this cuisine", "Delete", new { id = @Model.CuisineId })</p>
