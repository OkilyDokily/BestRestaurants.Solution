@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

@foreach (Restaurant restaurant in @Model)
{
  <p>@Html.ActionLink(restaurant.Name,"Details",new {id = restaurant.RestaurantId}) :
    @if (restaurant.Cuisine != null)
    {
      @Html.ActionLink(restaurant.Cuisine.CuisineType,"Details","Cuisines",new {id = restaurant.CuisineId});
    }
    else
    {
      @("No cuisine is associated with this restaurant.")
    }
  </p>

}
<hr style="width:50%;text-align:left;margin-left:0">
<p>@Html.ActionLink("Add a new restaurant","Create")</p>